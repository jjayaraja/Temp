# Reset folders
Get-PnPFolder -Url $listName -Includes ListItemAllFields | ForEach-Object {
  $_ | Set-PnPFolderPermission -List $listName -InheritPermissions
}

# Reset files
$items = Get-PnPListItem -List $listName -PageSize 500 -Fields "Id","HasUniqueRoleAssignments","FileRef"
foreach ($item in $items) {
  if ($item.FieldValues["HasUniqueRoleAssignments"]) {
    Write-Host "Resetting file: $($item.FieldValues['FileRef'])"
    $item.ListItemAllFields.ResetRoleInheritance()
  }
}
Invoke-PnPQuery
